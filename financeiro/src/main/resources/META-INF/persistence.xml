<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="financeiroUP"
		transaction-type="RESOURCE_LOCAL">

		<class>br.com.ln.financeiro.entity.CartaoCredito</class>
		<class>br.com.ln.financeiro.entity.Categoria</class>
		<class>br.com.ln.financeiro.entity.Conta</class>
		<class>br.com.ln.financeiro.entity.Entidade</class>
		<class>br.com.ln.financeiro.entity.Lancamento</class>
		<class>br.com.ln.financeiro.entity.Login</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

	</persistence-unit>

</persistence>
